---
import Layout from "../layouts/Layout.astro";
import ImageUpload from "../components/ImageUpload";
---

<Layout title="Welcome to SnapMeal">
  <main class="pkt-container pkt-container--center">
    <h1>Velkommen til SnapMeal</h1>
    <p>
      To get started, open the directory <code>src/pages</code> in your project.<br
      />
      <strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.
    </p>

    <ImageUpload client:only="react" />
  </main>
</Layout>

<style>
  main {
    padding: 1rem;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>
